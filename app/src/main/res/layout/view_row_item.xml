<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/question_background_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin_2x_spaced"
        android:layout_marginStart="@dimen/margin_2x_spaced"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:minHeight="@dimen/margin_4x_spaced"
        android:textColor="@color/question_text_color"
        android:textSize="@dimen/margin_medium" />

</LinearLayout>